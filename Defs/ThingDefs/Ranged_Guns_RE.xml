<!-- Taurus Judge -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Judge</defName>
    <label>Taurus Judge</label>
    <description>An ancient revolver designed for self-defense. Capable of firing a powerful pistol cartridge, but only accurate over short distances.</description>
    <graphicData>
      <texPath>Things/Weapons/TaurusJudge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>4500</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
